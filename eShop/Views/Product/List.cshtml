@model ProductListViewModel

@{
    ViewData["Title"] = "List";
    ViewData["PageHeader"] = Model.CurrentCategory.Name;
    ViewData["PageDescription"] = Model.CurrentCategory.Description;
}

<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

    @foreach (var product in Model.Products)
    {
        <partial name="_ProductsSummary" for="@product" />
    }
</div>